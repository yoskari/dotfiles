[colors]
;background = ${xrdb:color0:#222}
;background = #cc282828
background = #dd282828
background-alt = #c44444aa
;foreground = ${xrdb:color7:#222}
foreground = #fbf1c7
foreground-alt = #e78a4e
primary = #ffb52a
secondary = #e60053
alert = #bd2c40

[bar/bar1]
locale = fi_FI.UTF-8
;monitor = ${env:MONITOR:HDMI-1}
width = 100%
height = 32
offset-x = 0
offset-y = 0
radius = 0.0
fixed-center = false

background = ${colors.background}
foreground = ${colors.foreground}

line-size = 3
line-color = #f00

border-size = 0
border-color = #00000000

padding-left = 1
padding-right = 1

module-margin-left = 1
module-margin-right = 2

;font-0 = "Arimo:pixelsize=12;1"
font-0 = "Hack Nerd Font:pixelsize=9;1"
;font-1 = "NotoSans Nerd Font:pixelsize=11;1"
;font-2 = "UbuntuMono Nerd Font:pixelsize=11;1"
;font-3 = "FiraCode Nerd Font:pixelsize=11;1"
;font-4 = "Symbols Nerd Font:pixelsize=11;1"
;font-2 = "Terminus (TTF):pixelsize=12;1"
;font-0 = fixed:pixelsize=12;1
#font-1 = unifont:fontformat=truetype:size=8:antialias=false;0
#font-2 = siji:pixelsize=10;1

modules-left = powermenu workspaces polywins
;modules-center = polywins
modules-right = backlight-acpi wlan eth updates memory cpu temp filesystem battery pulseaudio date tray

tray-position = right
tray-padding = 2
;tray-background = ${colors.background}

;wm-restack = bspwm

;override-redirect = true

;scroll-up = bspwm-desknext
;scroll-down = bspwm-deskprev

cursor-click = pointer
cursor-scroll = ns-resize

[module/tray]
type = internal/tray

format-margin = 8px
tray-spacing = 8px

[module/workspaces]
type = custom/script
exec = $HOME/.config/polybar/openbox-workspaces.sh
interval = 0.1

[module/polywins]
type = custom/script
exec = ~/.config/polybar/polywins.sh 2>/dev/null
format = <label>
label = %output%
label-padding = 1
tail = true

[module/xwindow]
type = internal/xwindow
label = %title:0:30:...%

[module/xkeyboard]
type = internal/xkeyboard
blacklist-0 = num lock

format-prefix = " "
format-prefix-foreground = ${colors.foreground-alt}
format-prefix-underline = ${colors.secondary}

label-layout = %layout%
label-layout-underline = ${colors.secondary}

label-indicator-padding = 2
label-indicator-margin = 1
label-indicator-background = ${colors.secondary}
label-indicator-underline = ${colors.secondary}

[module/filesystem]
type = internal/fs
interval = 60

mount-0 = /home

format-mounted-prefix = "󰋊 "
format-mounted-prefix-foreground = ${colors.foreground-alt}
label-mounted = "%used%/%total%"
label-unmounted = %mountpoint% not mounted
label-unmounted-foreground = ${colors.foreground-alt}

[module/weather]
type = custom/script
;format-underline = 7daea3
format-prefix = "󰖐 "
format-prefix-foreground = ${colors.foreground-alt}
label = %output%
exec = $HOME/.config/polybar/weather.sh
interval = 1200

[module/temp]
type = custom/script
format-prefix = " "
format-prefix-foreground = ${colors.foreground-alt}
label = "%output%"
exec = sensors 2>/dev/null | grep "Tctl" | tr -d '+' | awk '{print $2}'
interval = 10

[module/updates]
type = custom/script
format-prefix = "󰚰 "
format-prefix-foreground = ${colors.foreground-alt}
label = "%output% päivitystä"
;format-underline = a9b665
exec = checkupdates 2>/dev/null | wc -l
interval = 120

[module/mpd]
type = internal/mpd
